<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.turing.sandbox.ImagenesUsuario"
    android:background="#EFEFEF"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/asistencia_card"
            android:layout_width="650dp"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/asistencia_imagenpersona"
                    android:layout_width="200dp"
                    android:layout_height="275dp"
                    android:layout_centerHorizontal="true"
                    android:background="#AAAAAA"
                    android:elevation="5dp"
                    android:scaleType="centerCrop"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/asistencia_rlusuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        >

                        <ImageView
                            android:id="@+id/asistencia_iconusuario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/asistencia_tilusuario"
                            android:src="@drawable/ic_person"/>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/asistencia_tilusuario"
                            android:layout_toRightOf="@+id/asistencia_iconusuario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:hint="Numero de usuario"
                            android:orientation="horizontal"
                            >
                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/asistencia_etusuario"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:inputType="number"
                                />
                        </android.support.design.widget.TextInputLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/asistencia_rlfecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        >

                        <ImageView
                            android:id="@+id/asistencia_iconfecha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/asistencia_tilfecha"
                            android:src="@drawable/ic_date"/>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/asistencia_tilfecha"
                            android:layout_toRightOf="@+id/asistencia_iconfecha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:hint="Fecha"
                            android:orientation="horizontal"
                            >
                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/asistencia_etfecha"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:inputType="number"
                                />
                        </android.support.design.widget.TextInputLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/asistencia_rlhora"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        >

                        <ImageView
                            android:id="@+id/asistencia_iconhora"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/asistencia_tilhora"
                            android:src="@drawable/ic_clock"/>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/asistencia_tilhora"
                            android:layout_toRightOf="@+id/asistencia_iconhora"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:hint="Hora"
                            android:orientation="horizontal"
                            >
                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/asistencia_ethora"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:inputType="number"
                                />
                        </android.support.design.widget.TextInputLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/asistencia_rllisto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        >

                        <Button
                            android:id="@+id/asistencia_btnListo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@color/colorPrimary"
                            android:layout_alignParentRight="true"
                            android:text="Listo"
                            android:textColor="@android:color/white"
                            android:elevation="5dp"
                            />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>
